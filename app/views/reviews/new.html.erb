<h2>Leave a review</h2>

<%= simple_form_for [@order_item, @review] do |f| %>
  <div class="form-group">
    <%= f.input :rating, as: :select, collection: 1..5, prompt: "Rating (1-5)" %>
  </div>

  <div class="form-group">
    <%= f.input :comment, label: "Write your review" %>
  </div>

  <%= f.button :submit, "Submit", class: "btn btn-primary" %>
<% end %>

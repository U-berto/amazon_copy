
     <div class="card h-100 d-flex flex-column justify-content-between">
            <% if item.image.attached? %>
          <%= cl_image_tag item.image.key,
                alt: item.name,
                width: 300, height: 200, crop: :fill,
                class: "card-image" %>
        <% else %>
          <%= cl_image_tag "placeholder.png",
                alert: "No image available",
                width: 300, height: 200,
                class: "card-image" %>
        <% end %>
      <div class="card-body d-flex flex-column">
        <h3 class="card-title fw-bold"><%= item.name %></h3>
        <p class="card-text mt-3"><%= item.description %></p>
        <div class="mt-auto d-flex justify-content-between align-items-end">

          <div class="text-start" style="letter-spacing: -2px;">
            <% full_stars = item.average_rating.to_i %>
            <% empty_stars = 5 - full_stars %>

            <% full_stars.times do %>
              <i class="fa-solid fa-star text-warning"></i>
            <% end %>

            <% empty_stars.times do %>
              <i class="fa-regular fa-star text-warning"></i>
            <% end %>
          </div>
          <div class="text-end text-primary fw-semibold">$<%= item.price %></div>
        </div>
      </div>
    </div>
